{
  "source": {
    "include": ["./src"],
    "exclude": ["node_modules", "docs", "src/index"]
  },
  "opts": {
    "destination": "./docs",
    "recurse": true,
    "template": "templates/default"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  }
}
